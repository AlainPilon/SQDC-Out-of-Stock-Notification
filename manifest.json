{
  "manifest_version": 2,
  "name": "SQDC Out of Stock Notification",
  "description": "Provides the option to subscribe to stock notifications for SQDC products directly from the product page.",
  "version": "1.0.2",
  "browser_specific_settings": {
    "gecko": {
	  "id": "notifications@sqdc.ca",
	  "strict_min_version": "53.0"
    }
  },
  "icons": {
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
      "scripts": [
          "lib/browser-polyfill.js",
          "background_scripts/background.js"
      ]
  },
  "content_scripts": [
      {
          "matches": [
              "*://*.sqdc.ca/*/p-*"
          ],
          "js": [
              "lib/browser-polyfill.js",
              "content_scripts/check-inventory.js"
          ]
      }
  ],
  "browser_action": {
      "default_icon": {
          "64": "icons/icon64.png",
          "128": "icons/icon128.png"
      },
      "default_title": "SQDC Out of Stock Notification"
  },
  "permissions": [
    "*://*.sqdc.ca/*",
    "alarms",
    "notifications",
    "storage"
  ]
}